<!-- button_background_yellow_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Yellow background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFEFDE20" />
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- Button border -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFEFDE20" />
            <corners android:radius="8dp" /> <!-- Adjust the corner radius to match the background -->
        </shape>
    </item>
</layer-list>
